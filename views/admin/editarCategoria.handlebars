{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<h2>Editor de Categoria</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/categoria/editar/confirmado" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">

            <script src="/js/slugCreator.js"></script>
            <script>
                slugCreator('#nome')
            </script>
            
            <label for="nome">Nome: </label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da categoria" value="{{categoria.nome}}">
            <label for="slug">Slug: </label>
            <input type="text" class="form-control" id="slug" placeholder=" Slug da categoria" value="{{categoria.slug}}" disabled>
            <input type="hidden" id="slughdd" name="slug">
            
            <button class="btn btn-success mt-2" type="submit">Editar</button>
        </form>
    </div>
    
</div>