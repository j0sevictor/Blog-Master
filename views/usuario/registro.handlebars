<h2>Formul√°rio de Registro</h2>
{{#if erro}}
    <div class="alert alert-danger">{{erro}}</div>
{{/if}}
<div class="card">
    <div class="card-body">
        <form action="/usuario/registro/cadastrar" method="post">
            <label for="noem">Nome:</label>
            <input type="text" class="form-control" name="nome" placeholder="Digite seu nome" value="{{usuario.nome}}" required>

            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" placeholder="Digite seu email" value="{{usuario.email}}" required>

            <label for="senha">Senha:</label>
            <input type="password" class="form-control" name="senha" placeholder="Digite sua senha" value="{{usuario.senha}}" required>

            <label for="senha2">Novamente:</label>
            <input type="password" class="form-control" name="senha2" placeholder="Digite a senha novamente" required>

            <button class="btn btn-success mt-4" type="submit">Registrar-se</button>
        </form>
    </div>
</div>